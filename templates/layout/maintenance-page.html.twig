<style>

body {
  background-color: #002145 !important;
}

.block {
  display: block;
}

.max-w-full {
  max-width: 100%;
}

.h-screen {
  height: 100vh;
}

.h-12 {
  height: 3rem;
}

.w-screen {
  height: 100vw;
}

.w-12 {
  width: 3rem;
}

.mx-auto {
  margin-right: auto;
  margin-left: auto;
}

.mt-10 {
    margin-top: 2.5rem;
}

.py-8 {
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.py-10 {
  padding-top: 2.5rem;
  padding-left: 2.5rem;
}

.px-2 {
  padding-right: .5rem;
  padding-left: .5rem;
}

.px-16 {
  padding-right: 4rem;
  padding-left: 4rem;
}

.pb-4 {
    padding-bottom: 1rem;
}

.bg-ubc-blue {
  background-color: #002145;
}

.bg-grey-50 {
    background-color: #fafafa;
}

.text-grey-500 {
    color: #9e9e9e;
}

.shadow-lg {
  box-shadow:0 10px 15px -3px rgba(0,0,0,.1),0 4px 6px -2px rgba(0,0,0,.05);
}

.text-2xl {
    font-size: 1.5rem;
}

.rounded {
  border-radius: .25rem;
}

.rounded-sm {
  border-radius: .125rem;
}

@media (min-width: 640px) {

  .sm--max-w-md {
    max-width: 34rem;
  }

}

</style>

<main id="unit-content" class="w-screen h-screen px-2 py-10 bg-ubc-blue">
  <div class="px-16 py-8 mx-auto rounded shadow-lg bg-grey-50 sm--max-w-md">
  <svg role="presentation" class="block w-12 h-12 mx-auto text-ubc-blue">
    <use xlink:href="#logo-ubc"></use>
  </svg>
  <h1 class="pb-4 mt-10 text-2xl font-normal text-grey-500">{{ site_name }} under maintenance</h1>

  {{ page.highlighted }}

  {{ page.content }}
  </div>
</main>



